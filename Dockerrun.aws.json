{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "code",
      "host": {
        "sourcePath": "/var/app/current/"
      }
    },
    {
      "name": "php-fpm-ini",
      "host": {
        "sourcePath": "/var/app/current/docker/volumes/php-fpm/php.ini"
      }
    },
    {
      "name": "php-fpm-conf",
      "host": {
        "sourcePath": "/var/app/current/docker/volumes/php-fpm/php-fpm.conf"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/docker/volumes/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "application",
      "image": "busybox",
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "code",
          "containerPath": "/var/app/current"
        }
      ]
    },
    {
      "name": "php-fpm",
      "image": "php:5.6-fpm",
      "essential": true,
      "volumesFrom" : [
        {
          "sourceContainer": "application",
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "php-fpm-ini",
          "containerPath": "/usr/local/etc/php/php.ini",
          "readOnly": true
        },
        {
          "sourceVolume": "php-fpm-conf",
          "containerPath": "/usr/local/etc/php-fpm.conf",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx:1.9.5",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "php-fpm"
      ],
      "volumesFrom" : [
        {
          "sourceContainer": "application",
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}