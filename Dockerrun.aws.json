{
  "AWSEBDockerrunVersion": 2,
  "family": "php-app",
  "volumes": [
    {
      "name": "code",
      "host": {
        "sourcePath": "/var/app/current/"
      }
    },
    {
      "name": "php-fpm-ini",
      "host": {
        "sourcePath": "/var/app/current/docker/volumes/php-fpm/php.ini"
      }
    },
    {
      "name": "php-fpm-conf",
      "host": {
        "sourcePath": "/var/app/current/docker/volumes/php-fpm/php-fpm.conf"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/docker/volumes/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php",
      "image": "joserobleda/php:5.6-cli",
      "essential": false,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "code",
          "containerPath": "/var/app/current"
        }
      ]
    },
    {
      "name": "php-fpm",
      "image": "joserobleda/php:5.6-fpm",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "code",
          "containerPath": "/var/app/current"
        },
        {
          "sourceVolume": "php-fpm-ini",
          "containerPath": "/usr/local/etc/php/php.ini",
          "readOnly": true
        },
        {
          "sourceVolume": "php-fpm-conf",
          "containerPath": "/usr/local/etc/php-fpm.conf",
          "readOnly": true
        }
      ],
      "entryPoint": [
        "php-fpm"
      ]
    },
    {
      "name": "nginx",
      "image": "nginx:1.9.5",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": [
        "php-fpm"
      ],
      "mountPoints": [
        {
          "sourceVolume": "code",
          "containerPath": "/var/app/current"
        },
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ],
      "entryPoint": [
        "nginx", "-g", "daemon off;"
      ]
    }
  ]
}